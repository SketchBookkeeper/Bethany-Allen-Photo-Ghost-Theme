{{#if feature_image}}
<a href="{{url}}" class="c-photo-card js-photo-zoom {{post_class}}">
	<h2 class="c-photo-card__title">{{title}}</h2>
	<img src="{{asset "images/blank.png"}}" data-src="{{feature_image}}" class="lozad c-photo-card__image js-photo-zoom__image" alt="{{title}}">
	<div class="c-photo-card__overlay"></div>
</a>
{{/if}}
