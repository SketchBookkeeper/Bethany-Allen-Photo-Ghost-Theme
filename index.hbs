{{!-- The main content area --}}
<main id="site-main">
	<div class="site-hero {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}"></div>

	<div class="">
		<div class="post-feed">
			{{#foreach posts}} {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
				{{> "post-card"}}
			{{/foreach}}
		</div>
	</div>
</main>

